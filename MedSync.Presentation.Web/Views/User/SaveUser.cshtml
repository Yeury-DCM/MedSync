@model MedSync.Core.Application.ViewModels.Users.SaveUserViewModel
@{
    bool editMode = Model != null && Model.Id != 0;
    ViewData["Title"] = "Guardar usuario";
}

<div class="container-fluid">

    <div class="row">
        <div class=" card g-5">
            <div class="card-header bg-light text-dark">
                <h4 class="fw-semi-bold">@(editMode ? $"Editando el usuario: {Model.Name}" : "Agregando nuevo usuario")</h4>
            </div>

            <div class="card-body bg-light text-dark">

                <form method="post" asp-action=@(editMode? "Edit" : "Add") asp-controller="User">


                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">Nombre</label>
                            <input asp-for="Name" type="text" placeholder="Juan" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Apellido</label>
                            <input asp-for="LastName" type="text" placeholder="Pérez" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label asp-for="Username" class="form-label">Nombre de usuario</label>
                            <input asp-for="Username" type="text" placeholder="JuanPerez78" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3 col-md-6 ">
                            <label asp-for="Email" class="form-label">Correo Electrónico</label>
                            <input asp-for="Email" type="email" placeholder="juanperez@gmail.com" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3 col-md-4">
                            <label asp-for="UserType" class="form-label">Tipo de Usuario</label>
                            <select asp-for="UserType" class="form-select" asp-items="ViewBag.UserTypes">

                                <span asp-validation-for="UserType" class="text-danger"></span>
                            </select>
                        </div>
                    </div>

                    <a asp-action="Index" asp-controller="User" class="btn btn-warning">Volver</a>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>
