@model List<MedSync.Core.Application.ViewModels.Users.UserViewModel>
@using MedSync.Core.Application.ViewModels.Users
@{
    ViewData["Title"] = "Mantenimiento de usuarios";
}

<div class="container-fluid px-0">

    <div class="d-flex justify-content-between align-items-center mb-3">

        <a asp-controller="User" asp-action="Add" class="btn btn-success"> Agregar Nuevo Usuario</a>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2 class="text-dark">No se encontraron usuarios</h2>
        }
        else
        {
            <div class="card bg-light">
                <table class="table table-hover table-light">
                    <thead>
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Nombre de usuario</th>
                            <th scope="col">Correo</th>
                            <th scope="col">Tipo de usuario</th>
                            <th scope="col">Acción</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (UserViewModel user in Model)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.LastName</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.UserType.ToString()</td>

                                <td>
                                    <div class="btn-group btn-group-sm d-flex">
                                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" type="button" class="btn btn-sm btn-outline-warning">Editar</a>
                                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" type="button" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </div>
                                </td>



                            </tr>
                        }

                    </tbody>
                </table>
            </div>


        }


    </div>
</div>