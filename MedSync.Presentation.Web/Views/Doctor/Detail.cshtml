@model MedSync.Core.Application.ViewModels.Doctors.DoctorViewModel

@{
    ViewData["Title"] = "Detalle del Doctor";
}

<div class="container mt-4">
    <div class="card p-4">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@Model.ImagePath" alt="Foto del Doctor" class="img-fluid" style="max-width: 250px;">
            </div>
            <div class="col-md-8">
                <h2>@Model.Name @Model.LastName</h2>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Teléfono:</strong> @Model.PhoneNumber</p>
                <p><strong>Cédula/Identificación:</strong> @Model.IdentificationNumber</p>
            </div>
        </div>
    </div>

    <a asp-action="Index" asp-controller="Doctor" class="btn btn-secondary mt-3">Volver</a>
</div>
