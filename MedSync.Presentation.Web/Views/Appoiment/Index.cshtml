@model List<MedSync.Core.Application.ViewModels.Appoiments.AppoimentViewModel>
@using MedSync.Core.Application.ViewModels.Appoiments
@using MedSync.Core.Domain.Enums
@{
    ViewData["Title"] = "Mantenimiento de pruebas de citas";
}

<div class="container-fluid px-0">

    <div class="d-flex justify-content-between align-items-center mb-3">

        <a asp-controller="Appoiment" asp-action="Add" class="btn btn-success"> Agregar Nueva Prrueba de Laboratorio</a>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2 class="text-dark">No se encontraron citas</h2>
        }
        else
        {
            <div class="card bg-light">
                <table class="table table-hover table-light">
                    <thead>
                        <tr>
                            <th scope="col">Paciente</th>
                            <th scope="col">Médico</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Hora</th>
                            <th scope="col">Motivo</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Acción</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (AppoimentViewModel appoiment in Model)
                        {
                            <tr>
                                <td>@appoiment.Patient.Name @appoiment.Patient.LastName</td>
                                <td>@appoiment.Doctor.Name @appoiment.Doctor.LastName</td>
                                <td>@appoiment.Date.ToShortDateString()</td>
                                <td>@appoiment.Time</td>
                                <td>@appoiment.Cause</td>
                                <td>@appoiment.Status</td>                             
                                <td>
                                    <div class="btn-group btn-group-sm d-flex">
                                        @if(appoiment.Status == Status.PendingConsultation)
                                        {
                                            <a asp-controller="Appoiment" asp-action="ConsultAppoiment" asp-route-id="@appoiment.Id" type="button" class="btn btn-sm btn-outline-info">Consultar cita</a>
                                        }
                                        else if (appoiment.Status == Status.PendigResult)
                                        {
                                            <a asp-controller="Appoiment" asp-action="ConsultAppoiment" asp-route-id="@appoiment.Id" type="button" class="btn btn-sm btn-outline-info">Consultar </a>
                                        }
                                        else if (appoiment.Status == Status.Completed)
                                        {
                                            <a asp-controller="Appoiment" asp-action="ConsultAppoiment" asp-route-id="@appoiment.Id" type="button" class="btn btn-sm btn-outline-info">Ver resultados</a>
                                        }
                                    </div>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>


        }


    </div>
</div>