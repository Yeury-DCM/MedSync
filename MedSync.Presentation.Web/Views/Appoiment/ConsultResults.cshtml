@model List<MedSync.Core.Application.ViewModels.LabResult.LabResultViewModel>
@using MedSync.Core.Application.ViewModels.LabResult
@using MedSync.Core.Domain.Enums

@{
    ViewData["Title"] = "Consulta cita";
}

<div class="row">
    <div class=" container col-6 offset-3">
        <div class="card">
            <div class="card-header bg-info text-light ">
                <h4>Consultando cita</h4>
            </div>

            <div class="card-body bg-light text-dark d-flex flex-column align-items-center">

                @if (Model == null || Model.Count == 0)
                {
                    <h2 class="text-dark">No se encontraron resultados</h2>
                }
                else
                {

                    <table class="table table-hover table-light">
                        <thead>
                            <tr>

                                <th scope="col">Prueba de laboratorio</th>
                                <th scope="col">Estado</th>
                             

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (LabResultViewModel labResult in Model)
                            {

                                <tr>

                                    <td>@labResult.LabTest.Name</td>
                                    <td>@labResult.Status.GetDisplayName()</td>

                                </tr>

                            }

                        </tbody>
                    </table>



                }
            </div>


        </div>
    </div>
</div>
